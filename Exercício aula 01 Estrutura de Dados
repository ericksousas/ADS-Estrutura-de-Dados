#include <stdio.h>
//Exercício 1 
// Função
int pot(int x, int y){
    if(y == 0){
        return 1;
    } else {
        return pot(x, y-1) * x;
    }
}
int main()
{
    printf("O resultado da exponenciação de 3 elevado a 6 é = %i\n", pot(3, 6));
    printf("O resultado da exponenciação de 5 elevado a 3 é = %i\n", pot(5, 3));
    return 0;
}
//Link do código 1: https://onlinegdb.com/fssViGz1F

#include <stdio.h>
//Exercício 2
//Função Fibonacci
int fibo (int n){
    if (n <= 1){ 
        return n;
    } else {
        return fibo(n - 1) + fibo(n - 2);
    }
}
int main()
{
    int n = 10;
    printf("A sequência de Fibonacci com %i número(s) será igual a %i", n, fibo(10));
    return 0;
}
//Link código 2: https://onlinegdb.com/TFrtCsO7e
